<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:textAlignment="center"
    android:background="@drawable/texture"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:rowCount="1"
        android:columnCount="3"
        android:layout_marginTop="0dp"
        android:id="@+id/relativeLayout">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/offline_mode"
            android:indeterminate="false"
            android:visibility="visible"
            android:indeterminateOnly="true"
            android:layout_marginLeft="1dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id="@+id/day"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp"
            android:visibility="visible"
            android:textColor="#ffc7ffd3"
            android:background="#43151c65"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="off mode"
            android:id="@+id/offline_mode"
            android:textSize="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="#ffff0009"
            android:layout_marginLeft="0dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:gravity="center" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.66"
        android:id="@+id/redstat">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorstat"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/lesson1"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:autoText="false"
                android:background="#63000000"
                android:text="..."
                android:textColor="#fffafbff"
                android:textSize="22dp"
                android:layout_marginLeft="0dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/lesson2"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="#63000000"
                android:text="..."
                android:textColor="#fffafbff"
                android:textSize="22dp"
                android:layout_marginLeft="0dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/lesson3"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="#63000000"
                android:text="..."
                android:textColor="#fffafbff"
                android:textSize="22dp"
                android:layout_marginLeft="0dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/lesson4"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="#63000000"
                android:text="..."
                android:textColor="#fffafbff"
                android:textIsSelectable="false"
                android:textSize="22dp"
                android:layout_marginLeft="0dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/lesson5"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="#63000000"
                android:text="..."
                android:textColor="#fffafbff"
                android:textSize="22dp"
                android:layout_marginLeft="0dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/lesson6"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="#63000000"
                android:text="..."
                android:textColor="#fffafbff"
                android:textSize="22dp"
                android:layout_marginLeft="0dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/lesson7"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="#63000000"
                android:text="..."
                android:textColor="#fffafbff"
                android:textSize="22dp"
                android:layout_marginLeft="0dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/one"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:autoText="false"
                android:background="#63000000"
                android:text="8:00 - 8:40"
                android:textColor="#fffafbff"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="right"
                android:gravity="center" />

            <TextView
                android:id="@+id/two"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:background="#63000000"
                android:textColor="#fffafbff"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="8:50 - 9:30" />

            <TextView
                android:id="@+id/three"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:background="#63000000"
                android:text="9:40 - 10:25"
                android:textColor="#fffafbff"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/four"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:background="#63000000"
                android:text="10:45 - 11:25"
                android:textColor="#fffafbff"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/five"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:background="#63000000"
                android:text="11:40 - 12:20"
                android:textColor="#fffafbff"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/six"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:background="#63000000"
                android:text="12:30 - 13:10"
                android:textColor="#fffafbff"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/seven"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:background="#63000000"
                android:text="13:20 - 14:00"
                android:textColor="#fffafbff"
                android:textSize="15dp"
                android:layout_marginLeft="0dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout3"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="data"
            android:textColor="#fffbfdff"
            android:textSize="25dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="last update"
            android:id="@+id/lastu"
            android:textSize="18dp"
            android:enabled="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout2"
        android:layout_weight="0.29">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/refresh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_weight="0.12"
            android:background="#95000000"
            android:padding="10dp"
            android:text="Refresh"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="#95000000"
            android:clickable="true"
            android:paddingBottom="25dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="25dp"
            android:text="Back"
            android:textColor="#fff0f0f0"
            android:textSize="25dp"
            android:padding="0dp"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="#95000000"
            android:clickable="true"
            android:paddingBottom="25dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="25dp"
            android:text="Ahead"
            android:textColor="#fff0f0f0"
            android:textSize="25dp"
            android:padding="0dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:id="@+id/updatestatus"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#ffff96a1"
        android:layout_marginTop="10dp" />


</LinearLayout>